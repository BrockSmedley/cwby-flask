{% extends "layout.jinja" %}
{% block content %}
    <div class="container">
        {% if items['data']|length > 0 %}
        <div class="row cart-row">
            <div class="col-md-8">
                {% for i in items['data'] %}
                    <div class="row container-fluid">
                        <div class="col-md-1">
                            <img src="{{ i['image']['href'] }}" class="img-thumbnail">
                        </div>
                        <div class="col-md-8">{{ i['name'] }}</div>
                        <div class="col-md-3">
                            <span>({{ i['quantity'] }}) Price: {{ i['unit_price']['amount'] }} CWBY</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="col-md-4 container fluid">
                <div class="row">
                    <span>Subtotal: {{cost}} CWBY</span>
                </div>
                <div class="row">
                    <div class="col">
                        <form action="/shipping" method="POST">
                            <input type="hidden" id="cartId" name="cartId" value="{{cartId}}">
                            <input type="hidden" id="cost" name="cost" value="{{cost}}">
                            <button type="submit" class="btn btn-success" id="button_buy">
                                <span
                                    class="glyphicon glyphicon-shopping-cart cart-item-custom"
                                    aria-hidden="true">
                                </span>
                                Checkout
                            </button>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token() }}">
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
        <div class="jumbotron">
            <h3>Your cart is empty :(</h3>
            <a href="/products"><h4>Browse our product here</h4></a>
        </div>
        {% endif %}
    </div>

    
{% endblock %}