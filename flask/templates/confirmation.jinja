{% extends "layout.jinja" %}

{% block content %}
    <div class="jumbotron container">
        <h1 class="display-4">Order received!</h1>
        <p class="lead">Your order has been processed successfully. We'll ship your gear out as soon as we receive your payment.</p>
        <hr class="my-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h3>Use Metamask to confirm your payment!</h3>
                    <span>Shipping code: it'll get there...</span>
                    <span>{{status}}</span>
                </div>
                <div class="col-md-4">
                    <img src="/img/metamask.png" class="img-thumbnail">
                </div>
            </div>
        </div>
    </div>
{% endblock %}